@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Recuperar contraseña";
}

<div class="row">
    <div class="col-md-4">

        @if (@TempData["Message"]=="MailSent"){
            <h4>Se ha procesado la solicitud</h4>
            <hr />
            <div id="message">
                <p>
                    Si la información es correcta recibirá un mensaje en su correo electrónico con un enlace para recuperar su contraseña.
                </p>
                <p>
                    Es posible que sea marcado como 'Correo no deseado' / 'Spam'.
                </p>
            </div>
        }
        else{
            <h4>Introducir datos para recuperar contraseña</h4>
            <hr />
            <form asp-action="ForgotPassword" method="post">
                <div class="form-group">
                    <label>Usuario o Email</label>
                    <input asp-for="Username" class="form-control" autocomplete=off />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-default">Recuperar</button>
            </form>
        }
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
